{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useNumberNamespace": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noBlankTarget": "off",
				"useKeyWithClickEvents": "off",
				"noAutofocus": "off",
				"noSvgWithoutTitle": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noDoubleEquals": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "none",
			"lineWidth": 80,
			"indentStyle": "tab",
			"indentWidth": 2
		}
	}
}
